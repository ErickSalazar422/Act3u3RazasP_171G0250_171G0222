@model PerrosDelMundo.Models.Razas
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}

<form method="post" asp-action="EliminarRaza" asp-controller="Home" asp-area="Admin">
    <div>
        <h1>Eliminar raza</h1>

        <input type="hidden" id="id" asp-for="Id" />
       

        <p>¿Está seguro de eliminar la raza  "<span id="nombreRaza">@Model.Nombre</span>"?</p>
        <p id="error">@Html.ValidationSummary()</p>

        <input type="submit" value="Eliminar" id="elim" />
        <a href="~/Admin">
            <input type="button" value="Cancelar" />
        </a>
    </div>
   
</form>